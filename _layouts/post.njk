---
layout: base.njk
---

<section class="bg-white">
  <div class="container mx-auto px-6 py-10 max-w-4xl">
    <p class="text-sm text-green-700 font-semibold mb-2">
      {{ category or "Blog" }}
    </p>

    <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-3">
      {{ title }}
    </h1>

    {% if description %}
      <p class="text-lg text-gray-600 mb-5">{{ description }}</p>
    {% endif %}

    <div class="text-sm text-gray-500 mb-8">
      {{ date | date("es-ES") }}
    </div>

    {% if image %}
      <figure class="mb-8">
        <img src="{{ image }}" alt="Imagen de {{ title }}" class="rounded-xl shadow w-full object-cover">
      </figure>
    {% endif %}

    {# Galería opcional (lista de imágenes) #}
    {% if gallery and gallery.length %}
      <div class="mb-10 overflow-x-auto flex gap-4 pb-2">
        {% for g in gallery %}
          <img
            src="{{ g.image }}"
            alt="Imagen {{ loop.index }} de {{ title }}"
            class="rounded-xl shadow min-w-full md:min-w-[70%] object-cover">
        {% endfor %}
      </div>
    {% endif %}

    <article class="prose prose-green max-w-none">
      {{ content | safe }}
    </article>

    {# Instagram: enlace o embed (si hay ambos, priorizamos embed) #}
    {% if instagram_embed %}
      <div class="mt-8">
        {{ instagram_embed | safe }}
        <script async src="https://www.instagram.com/embed.js"></script>
      </div>
    {% elseif instagram_url %}
      <p class="mt-8">
        <a href="{{ instagram_url }}" target="_blank" rel="noopener" class="underline text-green-700">
          Ver publicación en Instagram ↗
        </a>
      </p>
    {% endif %}

    <div class="mt-10">
      <a href="/blog/" class="inline-flex items-center gap-2 bg-gray-100 hover:bg-gray-200 text-gray-800 font-semibold py-3 px-6 rounded-full">
        ← Volver al blog
      </a>
    </div>
  </div>
</section>

{# JSON-LD básico tipo Article (opcional) #}
{% if title %}
<script type="application/ld+json">
{
  "@context":"https://schema.org",
  "@type":"Article",
  "headline": {{ title | dump }},
  {% if description %}"description": {{ description | dump }},{% endif %}
  {% if image %}"image": {{ image | dump }},{% endif %}
  "datePublished": "{{ date or page.date }}",
  {% if instagram_url %}"sameAs": [ {{ instagram_url | dump }} ],{% endif %}
  "mainEntityOfPage": {{ (site.url + page.url) | dump }}
}
</script>
{% endif %}
