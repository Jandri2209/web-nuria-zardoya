---
# Layout de receta (Eleventy + Nunjucks)
---

<article class="container mx-auto px-6 max-w-3xl py-10">
  <header class="mb-8">
    <h1 class="text-4xl font-bold mb-2">{{ title or page.fileSlug }}</h1>

    {% if description %}
      <p class="text-lg text-gray-600">{{ description }}</p>
    {% endif %}

    <div class="mt-4 text-sm text-gray-500 space-x-4">
      {% if date %}
        {# ğŸ‘‰ con el filtro date (Intl): formato largo en espaÃ±ol #}
        <span>ğŸ“…
          <time datetime="{{ date | date('es-ES', { year:'numeric', month:'2-digit', day:'2-digit' }) }}">
            {{ date | date('es-ES', { year:'numeric', month:'long', day:'2-digit' }) }}
          </time>
        </span>
        {# Si instalas Luxon y tu filtro acepta patrones, podrÃ­as usar:
           <time datetime="{{ date | date('yyyy-LL-dd') }}">{{ date | date("d 'de' LLLL 'de' yyyy") }}</time>
        #}
      {% endif %}

      {% if servings %}<span>ğŸ½ï¸ {{ servings }} raciones</span>{% endif %}
      {% if time %}<span>â±ï¸ {{ time }} min</span>{% endif %}
      {% if difficulty %}<span>ğŸ”¥ {{ difficulty }}</span>{% endif %}
    </div>

    {% if image %}
      <img src="{{ image }}" alt="Imagen de {{ title or page.fileSlug }}" class="mt-6 rounded-xl shadow"/>
    {% endif %}
  </header>

  {% if ingredients and ingredients.length %}
    <section class="mb-8">
      <h2 class="text-2xl font-semibold mb-3">Ingredientes</h2>
      <ul class="list-disc list-inside leading-8">
        {% for i in ingredients %}
          <li>{{ i.item or i }}</li>
        {% endfor %}
      </ul>
    </section>
  {% endif %}

  <section class="prose max-w-none">
    {{ content | safe }}
  </section>
</article>
