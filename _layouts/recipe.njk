---
layout: base.njk
---

{# Valores con fallback por si faltan campos #}
{% set T = title or page.fileSlug %}
{% set Cat = category or "Receta" %}
{% set Img = image or "/images/placeholder.jpg" %}

<article class="container mx-auto px-6 py-12 max-w-3xl">
  <header class="mb-8">
    <p class="text-sm text-green-700 font-semibold mb-2">{{ Cat }}</p>
    <h1 class="text-4xl font-bold text-gray-900 mb-3">{{ T }}</h1>

    {% if description %}
      <p class="text-lg text-gray-600">{{ description }}</p>
    {% endif %}

    <div class="mt-4 flex flex-wrap items-center gap-x-4 gap-y-2 text-sm text-gray-500">
      {% if date %}
        <span>
          üìÖ
          <time datetime="{{ date | date('es-ES', { year:'numeric', month:'2-digit', day:'2-digit' }) }}">
            {{ date | date('es-ES', { day:'2-digit', month:'long', year:'numeric' }) }}
          </time>
        </span>
      {% endif %}
      {% if servings %}<span>üçΩÔ∏è {{ servings }} raciones</span>{% endif %}
      {% if time %}<span>‚è±Ô∏è {{ time }} min</span>{% endif %}
      {% if difficulty %}<span>üî• {{ difficulty }}</span>{% endif %}
    </div>

    {% if Img %}
      <figure class="mt-6 overflow-hidden rounded-2xl shadow border border-gray-200">
        <img src="{{ Img }}" alt="Imagen de {{ T }}" class="w-full max-h-[520px] object-cover">
      </figure>
    {% endif %}
  </header>

  <section class="grid md:grid-cols-2 gap-8 mb-10">
    {% if ingredients and ingredients.length %}
      <div>
        <h2 class="text-2xl font-semibold mb-3">Ingredientes</h2>
        <ul class="list-disc pl-5 space-y-1 text-gray-800">
          {% for i in ingredients %}
            <li>{{ i.item or i }}</li>
          {% endfor %}
        </ul>
      </div>
    {% endif %}

    <div class="bg-green-50 border border-green-100 rounded-xl p-5">
      <h2 class="text-2xl font-semibold mb-3">Informaci√≥n r√°pida</h2>
      <ul class="space-y-1 text-gray-800">
        {% if servings %}<li><strong>Raciones:</strong> {{ servings }}</li>{% endif %}
        {% if time %}<li><strong>Tiempo:</strong> {{ time }} min</li>{% endif %}
        {% if difficulty %}<li><strong>Dificultad:</strong> {{ difficulty }}</li>{% endif %}
        {% if Cat %}<li><strong>Categor√≠a:</strong> {{ Cat }}</li>{% endif %}
      </ul>
    </div>
  </section>

  <section aria-label="Preparaci√≥n" class="prose max-w-none">
    {{ content | safe }}
  </section>

  <div class="mt-12">
    <a href="/recetas/" class="inline-flex items-center gap-2 bg-gray-100 hover:bg-gray-200 text-gray-800 font-semibold py-3 px-6 rounded-full">
      ‚Üê Volver a recetas
    </a>
  </div>
</article>
