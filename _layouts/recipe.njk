---
# Layout de receta
---
<article class="container mx-auto px-6 max-w-3xl py-10">
  <header class="mb-8">
    <h1 class="text-4xl font-bold mb-2">{{ title }}</h1>
    {% if description %}<p class="text-lg text-gray-600">{{ description }}</p>{% endif %}
    <div class="mt-4 text-sm text-gray-500">
      {% if date %}<span>📅 {{ date | date("yyyy-MM-dd") }}</span>{% endif %}
      {% if servings %}<span class="ml-4">🍽️ {{ servings }} raciones</span>{% endif %}
      {% if time %}<span class="ml-4">⏱️ {{ time }} min</span>{% endif %}
      {% if difficulty %}<span class="ml-4">🔥 {{ difficulty }}</span>{% endif %}
    </div>
    {% if image %}<img src="{{ image }}" alt="{{ title }}" class="mt-6 rounded-xl shadow"/>{% endif %}
  </header>

  {% if ingredients %}
  <section class="mb-8">
    <h2 class="text-2xl font-semibold mb-3">Ingredientes</h2>
    <ul class="list-disc list-inside leading-8">
      {% for i in ingredients %}<li>{{ i.item or i }}</li>{% endfor %}
    </ul>
  </section>
  {% endif %}

  <section class="prose max-w-none">
    {{ content | safe }}
  </section>
</article>
