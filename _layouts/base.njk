  <!-- üîá Silenciador de UI de Google Translate (barra/tooltip/balloon) -->
  <style id="gt-silencer">
    /* Oculta la barra superior (iframe) y evita desplazamiento del body */
    .goog-te-banner-frame { display: none !important; visibility: hidden !important; }
    body { top: 0 !important; }

    /* Tooltip y globo de ayuda de GT */
    #goog-gt-tt, .goog-te-balloon-frame { display: none !important; visibility: hidden !important; }

    /* Por si GT cuela overlays dentro del modal de cookies */
    #cookie-modal .goog-tooltip,
    #cookie-modal .VIpgJd-yAWNEb-L7lbkb,
    #cookie-modal .VIpgJd-yAWNEb-hvhgNd {
      display: none !important; visibility: hidden !important;
    }
  </style>
  <script>
    // Watcher: si GT reinyecta su UI, la ocultamos al vuelo (sin tocar tu l√≥gica)
    (function(){
      const sel = [
        '.goog-te-banner-frame',
        '#goog-gt-tt',
        '.goog-te-balloon-frame',
        '.goog-tooltip',
        '.VIpgJd-yAWNEb-L7lbkb',
        '.VIpgJd-yAWNEb-hvhgNd'
      ];
      function hideGT(){
        try{
          document.body && document.body.style.setProperty('top','0','important');
          sel.forEach(s => {
            document.querySelectorAll(s).forEach(el => {
              el.style.setProperty('display','none','important');
              el.style.setProperty('visibility','hidden','important');
            });
          });
        }catch(e){}
      }
      hideGT();
      new MutationObserver(hideGT).observe(document.documentElement, { childList:true, subtree:true });
    })();
  </script>
</head>
<body class="bg-gray-50 text-gray-800">

  {% include "header.njk" %}

  <main class="pt-24 md:pt-32 pb-4">
    {{ content | safe }}
  </main>

  {% include "footer.njk" %}

  <script>
    // Asegura iconos una vez que lucide y el DOM est√°n listos
    (function () {
      function initIcons(){ try { window.lucide && window.lucide.createIcons(); } catch(e){} }
      if (document.readyState === "loading") {
        document.addEventListener("DOMContentLoaded", initIcons);
      } else { initIcons(); }
    })();

    // Men√∫ m√≥vil
    (function () {
      const menuBtn = document.getElementById('menu-btn');
      const mobileMenu = document.getElementById('mobile-menu');
      if (!menuBtn || !mobileMenu) return;
      menuBtn.addEventListener('click', () => mobileMenu.classList.toggle('hidden'));
      document.addEventListener('keydown', (e) => { if (e.key === 'Escape') mobileMenu.classList.add('hidden'); });
    })();

    // A√±o en footer
    (function () {
      const yearSpan = document.getElementById('year');
      if (yearSpan) yearSpan.textContent = new Date().getFullYear();
    })();

    // ========== Flip global: click/teclado persistente SOLO en desktop ==========
    // Nota: el CSS del flip est√° scopeado a #nosiyes y #cta-final.
    // Si quieres usarlo en otra p√°gina (p.ej. #servicios), a√±ade ese contenedor al selector de abajo
    // y extiende tambi√©n los selectores del CSS en style/input.css.
    (function () {
      // Activa click en: (a) equipos con hover y puntero fino, O (b) pantallas ‚â• 1024px (md)
      const hasHoverFine = window.matchMedia('(hover:hover) and (pointer:fine)').matches;
      const isWide = window.matchMedia('(min-width: 1024px)').matches;
      if (!(hasHoverFine || isWide)) return; // m√≥vil/tablet estrecho: sin click-to-flip

      const scopeSelector = '#nosiyes .flip, #cta-final .flip';
      document.querySelectorAll(scopeSelector).forEach((el) => {
        if (!el.hasAttribute('tabindex')) el.setAttribute('tabindex','0');
        el.setAttribute('role','button');
        el.setAttribute('aria-pressed','false');

        const isInteractive = (t) => !!t.closest('a,button,input,select,textarea,label,[role="button"]');

        const toggle = () => {
          const on = el.classList.toggle('is-flipped');
          el.setAttribute('aria-pressed', on ? 'true' : 'false');
          // Al cerrar con click: no reabrir por hover hasta salir + quitar foco visual
          if (!on) { el.classList.add('nohover'); el.blur(); }
          else     { el.classList.remove('nohover'); }
        };

        el.addEventListener('click', (e) => {
          if (isInteractive(e.target)) return; // no interferir con enlaces/botones internos
          e.stopPropagation();
          toggle();
        });

        el.addEventListener('keydown', (e) => {
          if (e.key === 'Enter' || e.key === ' ') { e.preventDefault(); toggle(); }
        });

        // Al salir del √°rea o perder foco, reactivar el hover normal
        el.addEventListener('mouseleave', () => el.classList.remove('nohover'));
        el.addEventListener('blur',       () => el.classList.remove('nohover'));
      });
    })();
    // ==========================================================================
  </script>

