<!DOCTYPE html>
<html lang="{{ site.lang or 'es-ES' }}">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  {# SEO centralizado #}
  {% include "seo.njk" %}

  <link rel="icon" type="image/jpeg" href="/images/hero.jpeg">
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
  <script src="https://unpkg.com/lucide@latest"></script>
  <style>
    body { font-family: 'Poppins', sans-serif; }
  </style>
  <style>
    .emoji-flag {
      font-family: "Apple Color Emoji","Segoe UI Emoji","Noto Color Emoji","Twemoji Mozilla",sans-serif !important;
      font-variant-emoji: emoji; /* navegadores que lo soporten */
      line-height: 1;
    }
  </style>

</head>
<body class="bg-gray-50 text-gray-800">

  {% include "header.njk" %}

  <main class="pt-24 md:pt-32 pb-16">
    {{ content | safe }}
  </main>

  {% include "footer.njk" %}

  <script>
    lucide.createIcons();

    const menuBtn = document.getElementById('menu-btn');
    const mobileMenu = document.getElementById('mobile-menu');
    if (menuBtn && mobileMenu) {
      menuBtn.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
      });
    }

    const yearSpan = document.getElementById('year');
    if (yearSpan) {
      yearSpan.textContent = new Date().getFullYear();
    }
  </script>

  {# Datos estructurados del negocio (globales) #}
  {% include "ld-localbusiness.njk" %}

  {# Banner/modal de cookies #}
  {% include "cookies.njk" %}

  <!-- Netlify Identity + redirect de tokens (poner SIEMPRE al final del body) -->
  <script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
  <script>
    (function () {
      var h = window.location.hash || "";
      // Si el enlace de email trae #invite_token o #recovery_token,
      // redirige al panel para que el CMS lo procese.
      if (h.includes("invite_token") || h.includes("recovery_token")) {
        if (!location.pathname.startsWith("/admin")) {
          location.assign("/admin/" + h);
        }
      }
    })();
  </script>
  <!-- Twemoji fallback para banderas -->
  <script src="https://twemoji.maxcdn.com/v/latest/twemoji.min.js" crossorigin="anonymous"></script>
  <script>
    // Convierte sÃ³lo los spans con .emoji-flag en SVG
    twemoji.parse(document.body, {
      folder: "svg",
      ext: ".svg",
      className: "twemoji",
      callback: (icon, options) => icon
    });
  </script>

</body>
</html>
