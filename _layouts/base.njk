  <!-- ===== Widget de Google Translate: carga solo cuando hace falta ===== -->
  <script>
    (function(){
      function setCookie(n,v,a){ try{ document.cookie = n + "=" + encodeURIComponent(v) + ";" + (a||""); }catch(e){} }
      function delCookie(n){
        setCookie(n,"","Max-Age=0; Path=/");
        setCookie(n,"","Max-Age=0; Path=/; Domain="+location.hostname);
      }
      function getPair(){
        const m=document.cookie.match(/(?:^|;\s*)googtrans=([^;]+)/);
        return m?decodeURIComponent(m[1]):"";
      }
      function currentLang(){
        const p=getPair();
        if (p && /\/es\/[a-z]{2}/i.test(p)) return p.split("/").pop().toLowerCase();
        return "es";
      }

      // Inicializa el widget (gadget oculto; usamos menú propio)
      window.initGT = function(){
        try{
          new google.translate.TranslateElement({
            pageLanguage:"es",
            includedLanguages:"es,en,fr,eu",
            autoDisplay:false
          }, "gt-el");
        }catch(e){}
        syncLangUI();
      };

      // API pública para tu menú
      window.setLanguage = function(lang){
        if(!lang || lang==="es"){
          delCookie("gt_lang"); delCookie("googtrans");
          document.documentElement.setAttribute("lang","es-ES");
          location.reload(); return;
        }
        const pair="/es/"+lang;
        setCookie("gt_lang",lang,"Max-Age=31536000; Path=/; SameSite=Lax");
        setCookie("googtrans",pair,"Max-Age=31536000; Path=/");
        setCookie("googtrans",pair,"Max-Age=31536000; Path=/; Domain="+location.hostname);
        document.documentElement.setAttribute("lang",lang);
        location.reload();
      };

      function syncLangUI(){
        const lang=currentLang();
        document.querySelectorAll('[data-lang]').forEach(el=>{
          const on = el.getAttribute('data-lang') === lang;
          el.setAttribute('aria-checked', on ? 'true' : 'false');
          el.classList.toggle('font-semibold', on);
        });
        document.documentElement.setAttribute("lang", lang==="es" ? "es-ES" : lang);
      }

      document.addEventListener("click",(e)=>{
        const btn=e.target && e.target.closest('[data-set-language]');
        if(!btn) return;
        e.preventDefault();
        window.setLanguage(btn.getAttribute('data-set-language'));
      });
      document.addEventListener("DOMContentLoaded", syncLangUI);

      // Carga condicional del script del widget (solo si no estamos en ES)
      (function loadGTIfNeeded(){
        var pair = getPair();
        var nonES = pair && /\/es\/(en|fr|eu)\b/i.test(pair);
        if (!nonES) return;
        if (window.__gt_loaded) return;
        window.__gt_loaded = true;
        var s = document.createElement('script');
        s.src = 'https://translate.google.com/translate_a/element.js?cb=initGT';
        s.defer = true;
        document.head.appendChild(s);
      })();

      // ===== OFFSET: activa data-gtbar="on" cuando haya barra o idioma ≠ ES =====
      (function keepHeaderClear(){
        var HTML = document.documentElement;
        function widgetBannerPresent(){
          return !!document.querySelector('iframe.goog-te-banner-frame, .goog-te-banner-frame');
        }
        function widgetLangActive(){
          return /\/es\/(en|fr|eu)\b/i.test(getPair());
        }
        function refresh(){
          (widgetBannerPresent() || widgetLangActive())
            ? HTML.setAttribute('data-gtbar','on')
            : HTML.removeAttribute('data-gtbar');
        }
        refresh();
        // Observa cambios del DOM (el iframe aparece/desaparece)
        new MutationObserver(refresh).observe(document.documentElement,{childList:true,subtree:true});
        // Reintentos suaves
        ['load','focus','visibilitychange','resize','popstate'].forEach(ev=>addEventListener(ev,refresh,{passive:true}));
        setTimeout(refresh, 400);
        setTimeout(refresh,1200);
      })();
    })();
  </script>

  <div id="gt-el" class="hidden"></div>
</body>
