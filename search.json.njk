[
{%- set sep = joiner() -%}

{# ===== Recetas ===== #}
{%- for page in collections.recetas -%}
  {{- sep() -}}
  {
    "title": {{ page.data.title | dump | safe }},
    "url": {{ page.url | dump | safe }},
    "description": {{ page.data.description | dump | safe }},
    "category": {{ (page.data.category or "Receta") | dump | safe }},
    "type": "receta",
    "date": "{{ page.date | date('es-ES') }}"
  }
{%- endfor -%}

{# ===== Blog ===== #}
{%- for page in collections.blog -%}
  {{- sep() -}}
  {
    "title": {{ page.data.title | dump | safe }},
    "url": {{ page.url | dump | safe }},
    "description": {{ page.data.description | dump | safe }},
    "category": {{ (page.data.category or "Blog") | dump | safe }},
    "type": "blog",
    "date": "{{ page.date | date('es-ES') }}"
  }
{%- endfor -%}
]
