<script type="application/ld+json" id="ld-localbusiness">
{
  "@context": "https://schema.org",
  "@type": ["Organization","LocalBusiness"],
  "@id": {{ site.businessId | dump | safe }},
  "name": {{ site.name | dump | safe }},
  "legalName": {{ site.legalName | dump | safe }},
  "url": {{ (site.url + "/") | dump | safe }},
  "logo": {{ site.logo | dump | safe }},
  "image": {{ (site.url + site.socialImage) | dump | safe }},
  "email": {{ site.email | dump | safe }},
  "telephone": {{ site.telephone | dump | safe }},

  "address": {
    "@type": "PostalAddress",
    "addressLocality": {{ site.address.addressLocality | dump | safe }},
    "addressRegion": {{ site.address.addressRegion | dump | safe }},
    "postalCode": {{ site.address.postalCode | dump | safe }},
    "addressCountry": {{ site.address.addressCountry | dump | safe }}
  },

  "areaServed": {{ site.areaServed | dump | safe }},
  "hasMap": {{ site.googleBusiness | dump | safe }},

  "openingHoursSpecification": [
    { "@type":"OpeningHoursSpecification", "dayOfWeek":[ "Monday","Tuesday","Wednesday","Thursday" ], "opens":"08:00", "closes":"14:00" },
    { "@type":"OpeningHoursSpecification", "dayOfWeek":[ "Monday","Tuesday","Wednesday","Thursday" ], "opens":"16:30", "closes":"18:30" },
    { "@type":"OpeningHoursSpecification", "dayOfWeek":"Friday", "opens":"08:00", "closes":"15:00" }
  ],

  "sameAs": {{ site.sameAs | dump | safe }},
  "priceRange": "€€",
  "founder": { "@type":"Person", "@id": {{ (site.url + "/#person") | dump | safe }} },

  "contactPoint": [
    {
      "@type": "ContactPoint",
      "contactType": "customer support",
      "telephone": {{ site.telephone | dump | safe }},
      "areaServed": "ES",
      "availableLanguage": ["es","en","fr","eu"]
    },
    {
      "@type": "ContactPoint",
      "contactType": "appointments",
      "telephone": {{ site.telephone | dump | safe }},
      "areaServed": "ES",
      "availableLanguage": ["es","en","fr","eu"],
      "url": {{ site.calendlyUrl | dump | safe }}
    }
  ],

  "potentialAction": {
    "@type": "ScheduleAction",
    "name": "Pedir cita",
    "target": {{ site.calendlyUrl | dump | safe }}
  }
}
</script>
