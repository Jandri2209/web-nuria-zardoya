<title>{{ title or site.defaultTitle }}</title>
<meta name="description" content="{{ description or site.defaultDescription }}">
<link rel="canonical" href="{{ site.url }}{{ page.url }}">

<meta property="og:site_name" content="{{ site.name }}">
<meta property="og:title" content="{{ title or site.defaultTitle }}">
<meta property="og:description" content="{{ description or site.defaultDescription }}">
<meta property="og:type" content="website">
<meta property="og:url" content="{{ site.url }}{{ page.url }}">
<meta property="og:image" content="{{ site.url }}{{ site.socialImage }}">
<meta name="twitter:card" content="summary_large_image">
