{# --- Título y descripción --- #}
<title>{{ title or site.defaultTitle }}</title>
<meta name="description" content="{{ description or site.defaultDescription }}">

{# --- Canonical (permite override con page.canonical) --- #}
{% set canonicalHref = page.canonical or (site.url + page.url) %}
{% if not page.noindex %}
<link rel="canonical" href="{{ canonicalHref }}">
{% endif %}

{# --- Open Graph / Twitter --- #}
<meta property="og:site_name" content="{{ site.name }}">
<meta property="og:title" content="{{ title or site.defaultTitle }}">
<meta property="og:description" content="{{ description or site.defaultDescription }}">
<meta property="og:type" content="website">
<meta property="og:url" content="{{ site.url }}{{ page.url }}">
<meta property="og:image" content="{{ site.url }}{{ site.socialImage }}">
<meta property="og:image:width" content="1200">
<meta property="og:image:height" content="630">
<meta property="og:image:type" content="image/jpeg">
<meta property="og:locale" content="{{ (site.lang or 'es-ES') | replace('-', '_') }}">
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:image" content="{{ site.url }}{{ site.socialImage }}">

{# --- Robots: index/ noindex según la página --- #}
{% if page.noindex %}
  <meta name="robots" content="noindex, nofollow">
{% else %}
  <meta name="robots" content="index, follow, max-image-preview:large">
{% endif %}
