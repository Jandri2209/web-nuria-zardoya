<title>{{ title or site.defaultTitle }}</title>
<meta name="description" content="{{ description or site.defaultDescription }}">
<link rel="canonical" href="{{ site.url }}{{ page.url }}">

<meta property="og:site_name" content="{{ site.name }}">
<meta property="og:title" content="{{ title or site.defaultTitle }}">
<meta property="og:description" content="{{ description or site.defaultDescription }}">
<meta property="og:type" content="website">
<meta property="og:url" content="{{ site.url }}{{ page.url }}">

{# Imagen social: usa path relativo en site.socialImage #}
<meta property="og:image" content="{{ site.url }}{{ site.socialImage }}">
<meta property="og:image:width" content="1200">
<meta property="og:image:height" content="630">
<meta property="og:image:type" content="image/jpeg">
<meta property="og:locale" content="{{ (site.lang or 'es-ES') | replace('-', '_') }}">

{# Aunque no uses Twitter, estas metas no molestan #}
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:image" content="{{ site.url }}{{ site.socialImage }}">

<meta name="robots" content="max-image-preview:large">
